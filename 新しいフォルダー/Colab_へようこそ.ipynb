      "source": [
        "# 台形の寸法（単位：cm）\n",
        "top = 10\n",
        "bottom = 20\n",
        "height = 5\n",
        "\n",
        "# 台形の面積を計算（公式：（上辺＋下辺）× 高さ ÷ 2）\n",
        "area = (top + bottom) * height / 2\n",
        "\n",
        "# 結果を「◯◯cm²」の形式で出力\n",
        "print(str(area) + \"cm²\")"
      ]
    }
